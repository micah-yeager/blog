{
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "types": [
      "@react-router/node",
      "vite/client"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "skipLibCheck": true,
    "checkJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "./app/components/*"
      ],
      "@content/*": [
        "./content/*"
      ],
      "@utils/*": [
        "./app/utils/*"
      ],
      "@services/*": [
        "./app/services/*"
      ],
      "~/*": [
        "./app/*"
      ]
    },
    "noEmit": true
  }
}